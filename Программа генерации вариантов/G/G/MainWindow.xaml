<Window x:Class="G.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Style="{StaticResource MaterialDesignWindow}"
        xmlns:local="clr-namespace:G"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Пользователь 'Преподаватель'" Height="384" Width="350" WindowStartupLocation="CenterScreen">
    <Grid >
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF3E3D3D"  Height="368" Width="350">
            <StackPanel >
                <TextBox TextWrapping="Wrap" Text="Вход" Width="197" Margin="0,40,0,0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="20" Foreground="White" FontWeight="Bold" />
                <TextBox  x:Name="textboxlogin" materialDesign:HintAssist.Hint="Введите логин" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Foreground="White"  Width="190" Margin="0,50,0,0" FontSize="18"/>
                <PasswordBox x:Name="textboxpass" materialDesign:HintAssist.Hint="Введите пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox }" Foreground="White" Width="190" Margin="0,0,0,0" FontSize="18"/>
                <Button Content="Войти" Margin="0,60,0,0" Width="171" Padding="16,2,16,4" Click="Button_Click" />

            </StackPanel>


        </Border>



    </Grid>
</Window>
